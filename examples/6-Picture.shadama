program "Picture"
breed Turtle (pos:vec2, d:vec2, color:vec4)

data Ahiru("ahiru.png", "image")

def move() {
  this.pos = this.pos:vec2 + this.d:vec2
}

static step() {
  Turtle.move()
  Turtle.draw()
}

static setup() {
  Turtle.fillImage("pos", "color", Ahiru)
  Turtle.fillRandomDir("d")
  Display.clear()
  Turtle.draw()
 step.start();
}
